<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Thrall.Light" parent="Theme.AppCompat.Light">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuStyle_Light</item>
        <item name="actionMenuTextColor">@color/MenuText_Light</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="Thrall.Dark" parent="Theme.AppCompat">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuStyle_Dark</item>
        <item name="actionMenuTextColor">@color/MenuText_Dark</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="Thrall.DayNight" parent="Theme.AppCompat.DayNight">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuStyle_DayNight</item>
        <item name="actionMenuTextColor">@color/MenuText_DayNight</item>
        <item name="android:colorBackground">@android:color/darker_gray</item>
    </style>

    <style name="ActionButtonStyle" parent="Theme.AppCompat">
        <item name="android:minWidth">0dp</item>
        <item name="android:maxWidth">72dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="MenuStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/MenuItem_TextSize</item>
    </style>

    <style name="MenuStyle_Light" parent="MenuStyle">
        <item name="android:textColor">@color/MenuText_Light</item>
    </style>

    <style name="MenuStyle_Dark" parent="MenuStyle">
        <item name="android:textColor">@color/MenuText_Dark</item>
    </style>

    <style name="MenuStyle_DayNight" parent="MenuStyle">
        <item name="android:textColor">@color/MenuText_DayNight</item>
    </style>

</resources>